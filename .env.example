# =============================================================================
# CONFIGURACIÓN DEL WORKER
# =============================================================================

# Ambiente de ejecución (development, production, test)
NODE_ENV=development

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================

# URL de conexión a MySQL (Prisma)
# Formato: mysql://USER:PASSWORD@HOST:PORT/DATABASE
DATABASE_URL="mysql://root:password@localhost:3306/worker_db"

# =============================================================================
# CONFIGURACIÓN DE REDIS (BULL)
# =============================================================================

# URL de conexión a Redis (usado por Bull y para caché)
# Formato: redis://[:password@]host[:port][/db-number]
REDIS_URL=redis://localhost:6379

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Ruta donde se almacenarán los archivos de log
LOG_PATH=logs

# Nombre base para los archivos de log
LOG_NAME=worker

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS MYSQL
# =============================================================================

# URL de conexión (se construye automáticamente en docker-compose)
DATABASE_URL=mysql://root:password@localhost:3306/worker_db

# Ejecutar seed al iniciar (true/false)
RUN_SEED=true

# Nivel de logging de Prisma (query, error, warn, info - separados por coma)
# En producción se recomienda solo 'error,warn', en desarrollo 'query,error,warn,info'
PRISMA_LOG_LEVEL=query,error,warn,info

# =============================================================================
# CONFIGURACIÓN DE COLAS (BULL)
# =============================================================================

# Nombre de la cola de emails
QUEUE_NAME_EMAIL=email-queue

# Nombre de la cola de reportes
QUEUE_NAME_REPORTS=reports-queue

# =============================================================================
# CONFIGURACIÓN DE CONCURRENCIA (WORKERS)
# =============================================================================

# Número de trabajos de email que se procesan simultáneamente
EMAIL_CONCURRENCY=5

# Número de trabajos de reportes que se procesan simultáneamente
REPORTS_CONCURRENCY=2

# =============================================================================
# CONFIGURACIÓN SMTP (ENVÍO DE CORREOS)
# =============================================================================

# Host del servidor SMTP
SMTP_HOST=smtp.example.com

# Puerto del servidor SMTP (587 para STARTTLS, 465 para SSL)
SMTP_PORT=587

# Usuario para autenticación SMTP
SMTP_USER=user

# Contraseña para autenticación SMTP
SMTP_PASS=pass
